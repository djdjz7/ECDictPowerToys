<mw:MicaWindow
    x:Class="Community.PowerToys.Run.Plugin.ECDict.WordWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Community.PowerToys.Run.Plugin.ECDict"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mw="clr-namespace:MicaWPF.Lite.Controls;assembly=MicaWPF.Lite"
    Title="WordWindow"
    Width="512"
    MaxHeight="512"
    Deactivated="Window_Deactivated"
    KeyDown="Window_KeyDown"
    ResizeMode="NoResize"
    SizeToContent="Height"
    TextElement.FontSize="16"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="20,4,20,12">
            <TextBlock
                Name="TitleWord"
                FontSize="24"
                TextWrapping="Wrap" />
            <TextBlock Name="Phonetic" TextWrapping="Wrap" />
            <TextBlock
                Name="Translation"
                Margin="0,4,0,0"
                TextWrapping="Wrap" />
        </StackPanel>
    </ScrollViewer>
</mw:MicaWindow>
